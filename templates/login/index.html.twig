{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <h2>Connexion</h2>

    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <input type="text" placeholder="Utilisateur..." class="form-control" name="_username" required>
        </div>
        <div class="form-group">
            <input type="password" placeholder="Mot de passe..." class="form-control" name="_password" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !!!</button>
        </div>
    </form>
{% endblock %}
